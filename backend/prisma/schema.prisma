generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Animal {
  id          String      @id @default(uuid())
  name        String
  age         Int
  description String
  category    AnimalTypes
  imageURL    String
  isAdopted   Boolean     @default(false)
  User        User?       @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String?     @unique
}

model User {
  id                String      @id @default(uuid())
  name              String
  email             String      @unique
  password          String
  gender            Genders
  animals           Animal[]
  animalPreferences AnimalTypes
  imageURL          String
}

enum Genders {
  MALE
  FEMALE
}

enum AnimalTypes {
  CAT
  DOG
}
